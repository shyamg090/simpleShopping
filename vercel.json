{
    "builds": [
        {
            "src": "index.js",
            "use": "@vercel/node"
        },   
        {
            "src": "*build/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "(.+)",
            "dest": "build/$1"
        },
        {
            "src": "/",
            "dest": "build/index.html"
        },

        {
            "src": "/products",
            "dest": "index.js"
        },           
        {
            "src": "/products/(.*)",
            "dest": "index.js"
        }       


    ]
}